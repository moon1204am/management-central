@page "/devicedelete/{DeviceId}"
<h3>Delete Device</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Device Id</th>
            <th scope="col">Location</th>
            <th scope="col">Date</th>
            <th scope="col">Type</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td scope="row">@Device.DeviceId</td>
            <td scope="row">@Device.City.Name</td>
            <td scope="row">@Device.Date.ToString("yyyy-MM-dd")</td>
            <td scope="row">@Device.Type</td>
            <td scope="row">@Device.Status</td>
        </tr>
    </tbody>
</table>
<a href="@($"dashboard")" class="btn btn-outline-primary">Back to Device list</a>
<a class="btn btn-outline-danger" @onclick="() => Delete(Device.DeviceId)">Delete</a>