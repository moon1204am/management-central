<h5>Overview of your Internet of Things</h5>

@ExtraCaption

<a class="btn btn-outline-primary" href="@($"deviceadd")">Add Device</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Device Id</th>
            <th scope="col">Location</th>
            <th scope="col">Date</th>
            <th scope="col">Type</th>
            <th scope="col">Status</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Devices)
        {
            <tr>
                <td scope="row"><a class="btn btn-outline-primary" href="@($"deviceview/{device.DeviceId}")">@device.DeviceId</a></td>
                <td scope="row">@device.City</td>
                <td scope="row">@device.Date</td>
                <td scope="row">@device.Type</td>
                <td scope="row">@device.Status</td>
                <td scope="row"><a class="btn btn-outline-primary" href="@($"deviceupdate/{device.DeviceId}")">Update</a></td>
                <td scope="row"><a class="btn btn-outline-danger" href="@($"devicedelete/{device.DeviceId}")">Delete</a></td>
            </tr>
        }
    </tbody>
</table>